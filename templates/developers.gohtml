{{define "developers"}} {{ template "_header" . }}

<div class="container" id="developers-page">

    <div class="jumbotron">
        <div class="row">
            <div class="col-sm-12 col-lg-6">

                <h1 class="display-4"><i class="fas fa-star"></i> Developers</h1>
                <p class="lead">{{ comma (len .Developers) }} Developers updated <span data-livestamp="{{ .Date }}"></span>.</p>

            </div>
            <div class="col-sm-12 col-lg-6">

                <div class="input-group input-group-lg mt-3">
                    <input class="form-control" id="search" type="text" placeholder="Search for a Developer" required="required" autocomplete="off" autofocus>
                </div>

            </div>
        </div>
    </div>

    <div class="card">
    {{ template "_stats_header" . }}
        <div class="card-body">

            <div class="table-responsive">
                <table class="table table-hover table-striped table-datatable mb-0" data-sort="[[3, 'desc'], [1, 'desc']]">
                    <thead class="thead-light">
                    <tr>
                        <th scope="col">Developer</th>
                        <th scope="col">Games</th>
                        <th scope="col">Avg Price</th>
                        <th scope="col" data-sort="desc">Avg Score</th>
                    </tr>
                    </thead>
                    <tbody class="developers-list">
                    {{ range $key, $value := .Developers }}
                    <tr data-link="{{.GetPath}}">
                        <td><i class="fas fa-star"></i> {{ .Name }}</td>
                        <td>{{ comma .Apps }}</td>
                        <td>{{ .GetMeanPrice $.UserCountry }}</td>
                        <td>{{ .GetMeanScore $.UserCountry }}</td>
                    </tr>
                    {{ end }}
                    </tbody>
                </table>
            </div>

        </div>
    </div>

</div>

{{ template "_footer" . }} {{end}}
