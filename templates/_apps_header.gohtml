{{define "_apps_header"}}

    <div class="card-header">

        {{if endsWith .Path "packages" }}
            <h5 class="float-right mb-0">
                <span class="badge badge-secondary cursor-pointer" id="live-badge">Live</span>
            </h5>
        {{end}}

        <ul class="nav nav-tabs card-header-tabs" role="tablist">

            <li class="nav-item">
                {{if endsWith .Path "games" }}
                    <span class="nav-link active" role="tab"><i class="fas fa-gamepad"></i> Games</span>
                {{else}}
                    <a class="nav-link" href="/games" role="tab"><i class="fas fa-gamepad"></i> Games</a>
                {{end}}
            </li>

            <li class="nav-item">
                {{if endsWith .Path "packages" }}
                    <span class="nav-link active" role="tab"><i class="fas fa-cube"></i> Packages</span>
                {{else}}
                    <a class="nav-link" href="/packages" role="tab"><i class="fas fa-cube"></i> Packages</a>
                {{end}}
            </li>

            <li class="nav-item">
                {{if endsWith .Path "bundles" }}
                    <span class="nav-link" role="tab"><i class="fas fa-cubes"></i> Bundles</span>
                {{else}}
                    <span class="nav-link" role="tab"><i class="fas fa-cubes"></i> Bundles</span>
                {{end}}
            </li>

        </ul>
    </div>

{{end}}
